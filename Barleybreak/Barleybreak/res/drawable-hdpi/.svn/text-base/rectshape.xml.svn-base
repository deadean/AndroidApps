<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@android:color/transparent"/>            
            <padding
                android:bottom="1dp"
                android:right="1dp" />
        </shape>        
    </item>
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/translucent_background"/>
            <!--  gradient                
                android:angle="315"                
                android:endColor="@android:color/black"
                android:startColor="@android:color/transparent" />-->            
            <padding
                android:bottom="@dimen/shadow"
                android:right="@dimen/shadow" />
        </shape>        
    </item>    
    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <stroke android:width="1dp" android:color="@android:color/background_dark"/>
            <gradient
                android:startColor="#222222"                                                               
                android:endColor="#4A758B"                
                android:type="radial"
                android:centerX="50%"
                android:centerY="50%"
                android:gradientRadius="90"
                />
        </shape>
    </item>
</layer-list>