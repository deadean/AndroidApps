<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.NoActionBar.Fullscreen">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.        -->
    </style>

    <style name="ItemText" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@drawable/plasma_ab</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHighlight">@android:color/white</item>
        <item name="android:inAnimation">@android:anim/fade_in</item>
        <item name="android:outAnimation">@android:anim/fade_out</item>
    </style>

    <style name="TextSize" parent="AppTheme">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Textappearance" parent="AppTheme">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="StartThemeText" parent="AppTheme">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/myshape2</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Theme.Translucent" parent="android:style/Theme.Translucent">
        <item name="android:windowBackground">@color/translucent_background</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CropDlg" parent="AppTheme">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/welcome_shape</item>
        <item name="android:textSize">25sp</item>
    </style>

</resources>